@model TCSA_Movies.Arashi256.Models.MovieGenreViewModel
@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" class="btn btn-light"><i class="bi bi-plus-square"></i> Add New Movie</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <label class="custom-label">
            <span class="label-text">Genre:</span>
        <select asp-for="MovieGenre" asp-items="Model.Genres" class="custom-select">
            <option value="">All</option>
        </select>
        </label>
        <label class="custom-label">
            <span class="label-text">Title:</span>
            <input type="text" asp-for="SearchString" class="custom-input" />
        </label>
        <button type="submit" class="btn btn-secondary">Filter</button>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Rating)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit"><i class="bi bi-pencil fs-5"></i></a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Detail"><i class="bi bi-search fs-5"></i></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete"><i class="bi bi-trash fs-5"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>